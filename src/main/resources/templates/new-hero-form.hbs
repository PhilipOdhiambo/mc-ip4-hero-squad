
{{#partial "content"}}
    <h2>New Squad</h2>
    <form action="/hero-squad/add-hero-form" method="POST">
        <div class="form-field">
            <label class="form-label" for="hero-name">Hero Name</label>
            <input type="text" id="hero-name" name="hero-name" required class="form-control">
        </div>
        <div class="form-field">
            <label class="form-label" for="hero-age">Age (Years)</label>
            <input type="number" id="hero-age" name="hero-age" required class="form-control" placeholder="Age of the hero">
        </div>
        <div class="form-field">
            <label class="form-label" for="hero-power">Power</label>
            <input type="text" id="hero-power" name="hero-power" required class="form-control" placeholder="Strength of the hero">
        </div>
        <div class="form-field">
            <label class="form-label" for="hero-weakness">Weakness</label>
            <input type="text" id="hero-weakness" name="hero-weakness" required class="form-control" placeholder="Weakness of the hero">
        </div>
        <input type="text" hidden id="id" name="id" value="{{id}}">


        <input type="submit" value="Add Hero">
    </form>
{{/partial}}


{{> layout.hbs}}